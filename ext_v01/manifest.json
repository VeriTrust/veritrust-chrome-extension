{
  "manifest_version": 3,
  "name": "VeriTrust",
  "version": "1.0.0",
  "description": "The VeriTrust Extension",
  "icons": {
    "128": "./icons/icon.png"
  },
  "action": {
    "default_popup": "./index.html",
    "default_icon": "./icons/icon.png"
  },
  "permissions": ["storage", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  }
}
